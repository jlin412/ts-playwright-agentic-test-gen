{
  "name": "realworld-playwright-tests",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "test": "playwright test",
    "test:api": "playwright test --project=api",
    "test:ui": "playwright test --project=ui-chromium --project=ui-firefox --project=ui-webkit",
    "test:ui:chromium": "playwright test --project=ui-chromium",
    "test:ui:firefox": "playwright test --project=ui-firefox",
    "test:ui:webkit": "playwright test --project=ui-webkit",
    "cucumber": "node scripts/run-cucumber.mjs",
    "cucumber:open": "node scripts/run-cucumber.mjs --open-report",
    "cucumber:api": "node scripts/run-cucumber.mjs --tags \"@api\"",
    "cucumber:e2e": "node scripts/run-cucumber.mjs --tags \"@ui and not @tracefail\"",
    "cucumber:e2e:headed": "CUCUMBER_HEADED=1 node scripts/run-cucumber.mjs --tags \"@ui and not @tracefail\"",
    "cucumber:e2e:firefox": "CUCUMBER_BROWSER=firefox node scripts/run-cucumber.mjs --tags \"@ui and not @tracefail\"",
    "cucumber:e2e:firefox:headed": "CUCUMBER_BROWSER=firefox CUCUMBER_HEADED=1 node scripts/run-cucumber.mjs --tags \"@ui and not @tracefail\"",
    "cucumber:e2e:webkit": "CUCUMBER_BROWSER=webkit node scripts/run-cucumber.mjs --tags \"@ui and not @tracefail\"",
    "cucumber:e2e:webkit:headed": "CUCUMBER_BROWSER=webkit CUCUMBER_HEADED=1 node scripts/run-cucumber.mjs --tags \"@ui and not @tracefail\"",
    "cucumber:tracefail": "node scripts/run-cucumber.mjs --tags \"@tracefail\"",
    "cucumber:open-report": "open cucumber-report/cucumber.html",
    "report": "playwright show-report",
    "install:browsers": "playwright install"
  },
  "devDependencies": {
    "@playwright/test": "^1.50.0",
    "@types/node": "^22.10.0",
    "@cucumber/cucumber": "^11.0.0",
    "http-server": "^14.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.0"
  }
}
